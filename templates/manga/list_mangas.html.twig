{% if is_granted('ROLE_ADMIN') %}
    {% set base = 'administrateur/baseAdministrateur.html.twig' %}
{% else %}
    {% set base = 'utilisateur/baseUser.html.twig' %}
{% endif %}

    {% extends base %}

{% block title %}Liste des mangas{% endblock %}

{% block h1 %}
    <h1 class="titremanga">Liste des mangas</h1>
    <br><br>
    <style>

        .card .iconInfo{

            position: absolute;
            width:100%;
            padding:10px 6px;
            font-size: 16px;
            top:0px;
            left:0px;
        }

        .card .iconInfoEnCours{
            background-color:#FFD02D;

        }

        .card .iconInfoTermine{
            background-color: #28B463;
            color:#fff;
        }

    </style>
{% endblock %}


{% block body %}
    <div class="rowManga">
        {% for manga in mangaCollection %}
            <div class="card" style="width: 18rem;">
                <span class="iconInfo
                    {% if manga.serie.etat == 'En cours de parution' %}
                        iconInfoEnCours
                        "><i class="far fa-edit"></i>
                    {% else %}
                        iconInfoTermine
                        "><i class="fas fa-check"></i>
                    {% endif %}
                    Ce manga est {{ manga.serie.etat|lower }}.</span>
                <img src="../../public/uploads/{{ manga.image }}" class="card-img-top" alt="...">
                <div class="card-body cardb">
                    <h5 class="card-title">{{manga.serie.nom }}</h5>
                    <p class="card-text">{{ manga.descManga|striptags|slice(0,90) }}...</p>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="#" class="btn btn-warning">Modifier <i class="fas fa-reply"></i></a>
                        <a href="{{ path('delete_manga', {idManga: manga.id}) }}" class="btn btn-danger">Supprimer <i class="fas fa-reply"></i></a>
                    {% else %}
                        <a href="#" class="btn btn-primary btnclick">Y allez ...<i class="fas fa-reply"></i></a>
                    {% endif %}
                </div>
            </div>
    {% endfor %}
    </div>
{% endblock %}